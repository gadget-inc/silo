{
  "name": "@silo/client",
  "version": "0.0.1",
  "description": "TypeScript gRPC client for Silo job queue",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "generate": "pnpm exec protoc --ts_out=src/pb --ts_opt=long_type_bigint --ts_opt=generate_dependencies --proto_path=../proto ../proto/silo.proto",
    "build": "tsc",
    "test": "vitest run",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxfmt && oxlint --type-aware --fix",
    "format": "oxfmt",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm run build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.12.2",
    "@protobuf-ts/grpc-transport": "^2.9.4",
    "@protobuf-ts/runtime": "^2.9.4",
    "@protobuf-ts/runtime-rpc": "^2.9.4",
    "p-queue": "6.6.2",
    "serialize-error": "7.0.1"
  },
  "devDependencies": {
    "@protobuf-ts/plugin": "^2.9.4",
    "oxfmt": "^0.16.0",
    "oxlint": "^1.31.0",
    "oxlint-tsgolint": "^0.8.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.0.0",
  "license": "MIT"
}
